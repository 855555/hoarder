{
  "manifest_version": 3,
  "name": "Hoarder",
  "description": "An extension to bookmark links to hoarder.app",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "options_ui": {
    "page": "index.html#options",
    "open_in_tab": false
  },
  "permissions": ["storage", "activeTab", "tabs"]
}
